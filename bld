#! /bin/bash
if [ src/main/core/org/kissweb/builder/Tasks.java -nt build.work/exploded/WEB-INF/classes/org/kissweb/builder/Tasks.class ] || [ src/main/core/org/kissweb/builder/BuildUtils.java -nt build.work/exploded/WEB-INF/classes/org/kissweb/builder/BuildUtils.class ]; then
  echo Building the builder
  mkdir -p build.work/exploded/WEB-INF/classes
	javac -cp libs/commons-compress-1.20.jar src/main/core/org/kissweb/builder/Tasks.java src/main/core/org/kissweb/builder/BuildUtils.java -d build.work/exploded/WEB-INF/classes
fi
java -cp "build.work/exploded/WEB-INF/classes:libs/commons-compress-1.20.jar" org.kissweb.builder.BuildUtils "$@"
