  <build>
    <plugins>

      <!-- 1) Add multiple source roots (core, precompiled, backend) -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>3.4.0</version>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>src/main/core</source>
                <source>src/main/precompiled</source>
                <source>src/main/backend</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- 2) Copy src/main/backend files as-is (not compiled) into target/backend -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <version>3.3.1</version>
        <executions>
          <execution>
            <id>copy-backend-files</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/backend</outputDirectory>
              <resources>
                <resource>
                  <directory>src/main/backend</directory>
                  <filtering>false</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- 3) Enforce system dependencies are not normally allowed, but we allow them. -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <id>enforce-no-system-dependencies</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <requireNoSystemDependencies>
                  <fail>false</fail>
                  <message>System scoped dependencies inside the project directory are allowed.</message>
                </requireNoSystemDependencies>
              </rules>
              <fail>false</fail>
            </configuration>
          </execution>
        </executions>
      </plugin>


      <!-- 
          4) Replicate your old Ant tasks with maven-antrun-plugin.
             - "builder" runs at generate-sources to compile Tasks.java 
               and org/kissweb/BuildUtils.java.
             - All other tasks ("start-backend", "stop-backend", etc.) 
               are bound to <phase>none</phase>, so you explicitly run them with:
                 mvn antrun:run@start-backend
                 mvn antrun:run@stop-backend
                 ... etc.
       -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>3.1.0</version>
        <executions>

          <!-- ========== builder ========== -->
          <execution>
            <id>builder</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <!-- Replicate Ant: mkdir -->
                <mkdir dir="work/exploded/WEB-INF/classes"/>
                <!-- Replicate Ant: javac -->
                <javac includeantruntime="false"
                       srcdir="src/main/core"
                       destdir="work/exploded/WEB-INF/classes"
                       includes="org/kissweb/BuildUtils.java"
                       classpath="libs/commons-compress-1.20.jar"/>
                <javac includeantruntime="false"
                       srcdir="src/main/precompiled"
                       destdir="work/exploded/WEB-INF/classes"
                       includes="Tasks.java"
                       classpath="libs/commons-compress-1.20.jar"/>
              </target>
            </configuration>
          </execution>

          <!-- ========== start-backend ========== -->
          <execution>
            <id>start-backend</id>
            <!-- set phase to 'none' so it doesn't auto-run -->
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
                    <pathelement location="libs/commons-compress-1.20.jar"/>
                  </classpath>
                  <!-- The second arg is the "target name." -->
                  <arg value="start-backend"/>
                </java>
              </target>
            </configuration>
          </execution>

          <!-- ========== stop-backend ========== -->
          <execution>
            <id>stop-backend</id>
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
                    <pathelement location="libs/commons-compress-1.20.jar"/>
                  </classpath>
                  <arg value="stop-backend"/>
                </java>
              </target>
            </configuration>
          </execution>

          <!-- ========== start-frontend ========== -->
          <execution>
            <id>start-frontend</id>
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
                    <pathelement location="libs/commons-compress-1.20.jar"/>
                  </classpath>
                  <arg value="start-frontend"/>
                </java>
              </target>
            </configuration>
          </execution>

          <!-- ========== stop-frontend ========== -->
          <execution>
            <id>stop-frontend</id>
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
                    <pathelement location="libs/commons-compress-1.20.jar"/>
                  </classpath>
                  <arg value="stop-frontend"/>
                </java>
              </target>
            </configuration>
          </execution>

          <!-- ========== build ========== -->
          <execution>
            <id>build</id>
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
                    <pathelement location="libs/commons-compress-1.20.jar"/>
                  </classpath>
                  <arg value="build"/>
                </java>
              </target>
            </configuration>
          </execution>

          <!-- ========== war ========== -->
          <execution>
            <id>war</id>
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
                    <pathelement location="libs/commons-compress-1.20.jar"/>
                  </classpath>
                  <arg value="war"/>
                </java>
              </target>
            </configuration>
          </execution>

          <!-- ========== clean ========== -->
          <execution>
            <id>clean</id>
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
                    <pathelement location="libs/commons-compress-1.20.jar"/>
                  </classpath>
                  <arg value="clean"/>
                </java>
              </target>
            </configuration>
          </execution>

          <!-- ========== realclean ========== -->
          <execution>
            <id>realclean</id>
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
                    <pathelement location="libs/commons-compress-1.20.jar"/>
                  </classpath>
                  <arg value="realclean"/>
                </java>
              </target>
            </configuration>
          </execution>

          <!-- ========== ideclean ========== -->
          <execution>
            <id>ideclean</id>
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
                    <pathelement location="libs/commons-compress-1.20.jar"/>
                  </classpath>
                  <arg value="ideclean"/>
                </java>
              </target>
            </configuration>
          </execution>

          <!-- ========== jar ========== -->
          <execution>
            <id>jar</id>
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
                    <pathelement location="libs/commons-compress-1.20.jar"/>
                  </classpath>
                  <arg value="jar"/>
                </java>
              </target>
            </configuration>
          </execution>

          <!-- ========== javadoc ========== -->
          <execution>
            <id>javadoc</id>
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
                    <pathelement location="libs/commons-compress-1.20.jar"/>
                  </classpath>
                  <arg value="javadoc"/>
                </java>
              </target>
            </configuration>
          </execution>

          <!-- ========== kisscmd ========== -->
          <execution>
            <id>kisscmd</id>
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
                    <pathelement location="libs/commons-compress-1.20.jar"/>
                  </classpath>
