                </java>
              </target>
            </configuration>
          </execution>

          <!-- ========== KissGP ========== -->
          <execution>
            <id>KissGP</id>
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
                    <pathelement location="libs/commons-compress-1.20.jar"/>
                  </classpath>
                  <arg value="KissGP"/>
                </java>
              </target>
            </configuration>
          </execution>

          <!-- ========== libs ========== -->
          <execution>
            <id>libs</id>
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
                    <pathelement location="libs/commons-compress-1.20.jar"/>
                  </classpath>
                  <arg value="libs"/>
                </java>
              </target>
            </configuration>
          </execution>

          <!-- ========== setup-tomcat ========== -->
          <execution>
            <id>setup-tomcat</id>
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
                    <pathelement location="libs/commons-compress-1.20.jar"/>
                  </classpath>
                  <arg value="setup-tomcat"/>
                </java>
              </target>
            </configuration>
          </execution>

          <!-- ========== unit-tests ========== -->
          <execution>
            <id>unit-tests</id>
            <phase>none</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <java classname="Tasks" fork="true" dir=".">
                  <classpath>
                    <pathelement location="work/exploded/WEB-INF/classes"/>
